<h1>Create a new heroine</h1>

<% if @errors %>
  <h2>There were some errors:</h2>
  <ul>
  <% @errors.each do |error| %> 
    <li>
      <%= error %>
    </li>
  <% end %>
    
  </ul>
<% end %>

<%= form_for @heroine do |f| %>
  <p>
    <%= f.label "Name: " %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "Super Name: " %>
    <%= f.text_field :super_name %>
  </p>

  <p>
    <%= f.label "Select a Power: " %>
    <%= f.collection_select :power_id, @powers, :id, :name %> 
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
