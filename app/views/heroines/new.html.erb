<h1>Create a New Heroine!</h1>
<h3><%= link_to "Back to all Heroines", heroines_path %></h3>
<br>

<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: "enter name..." %><br><br>
  <%= f.label :super_name %>
  <%= f.text_field :super_name, placeholder: "enter super name..." %><br><br>
  <%= f.label :power_id %>
  <%= f.collection_select :power_id, Power.all, :id, :name, {:prompt => 'Please Select a Power'} %><br><br>
  <%= f.submit %>
<% end %>
